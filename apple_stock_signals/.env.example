# Trading System Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys
FINNHUB_API_KEY=your_finnhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Database Configuration (if using external DB)
DATABASE_URL=sqlite:///paper_trading.db

# Trading Configuration
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO

# Risk Management
MAX_PORTFOLIO_RISK=0.06  # 6% max portfolio heat
MAX_POSITION_RISK=0.02   # 2% max risk per trade

# ML Configuration (optional)
ENABLE_ML=false
ML_MODEL_PATH=./ml_models/saved_models/

# Monitoring (optional)
ENABLE_MONITORING=false
MONITORING_ENDPOINT=http://localhost:9090